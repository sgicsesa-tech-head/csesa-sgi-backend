          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{baseUrl}}/members",
        "body": { "mode": "raw", "raw": "{\n  \"name\": \"Jane Doe\",\n  \"photo_url\": \"https://example.com/photo.jpg\",\n  \"role\": \"President\",\n  \"division\": \"TECSE\",\n  \"order\": 1,\n  \"year\": \"2025-26\"\n}" }
      }
    },
    {
