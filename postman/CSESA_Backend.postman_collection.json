  "item": [
    {
      "name": "Admin Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{baseUrl}}/admin/login", "host": ["{{baseUrl}}"], "path": ["admin", "login"] },
        "body": { "mode": "raw", "raw": "{\n  \"email\": \"admin@csesa.in\",\n  \"password\": \"admin123\"\n}" }
      }
    },
    {
      "name": "Members - List",
      "request": { "method": "GET", "url": "{{baseUrl}}/members" }
    },
    {
      "name": "Members - List by Category",
      "request": { "method": "GET", "url": "{{baseUrl}}/members?category=Development" }
    },
    {
      "name": "Members - Categories",
      "request": { "method": "GET", "url": "{{baseUrl}}/members/categories" }
    },
    {
