          "raw": "{\n  \"mode\": \"replace\",\n  \"data\": {\n    \"2025-26\": [\n      { \"name\": \"Shivani Satish Mali\", \"role\": \"President\", \"image\": \"/api/placeholder/200/240\", \"order\": 1, \"division\": \"TECSE\" },\n      { \"name\": \"Mrunal Mahesh Gadavi\", \"role\": \"Vice President\", \"image\": \"/api/placeholder/200/240\", \"order\": 2, \"division\": \"TECSE\" }\n    ]\n  }\n}"
        }
      }
    },
    {
      "name": "Members - Delete (admin)",
      "request": {
        "method": "DELETE",
        "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "url": "{{baseUrl}}/members/1"
      }
    },
    {
