      }
    },
    {
      "name": "Members - By Year",
      "request": { "method": "GET", "url": "{{baseUrl}}/members/by-year" }
    },
    {
      "name": "Members - Years",
      "request": { "method": "GET", "url": "{{baseUrl}}/members/years" }
    },
